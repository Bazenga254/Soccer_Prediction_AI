# Soccer Prediction AI - Environment Variables
# Copy this to .env and fill in your actual API keys

API_FOOTBALL_KEY=your_api_football_key_here
ODDS_API_KEY=your_odds_api_key_here
FOOTBALL_DATA_API_KEY=your_football_data_key_here
ADMIN_PASSWORD=your_admin_password_here

# ── M-Pesa / Daraja STK Push (C2B deposits) ─────────────────────────────────
# Set DARAJA_ENV=production when going live; sandbox uses test credentials.
DARAJA_ENV=sandbox
DARAJA_CONSUMER_KEY=your_daraja_consumer_key_here
DARAJA_CONSUMER_SECRET=your_daraja_consumer_secret_here
# Paybill or Till number registered on the Daraja portal
DARAJA_SHORTCODE=your_paybill_or_till_number_here
# Lipa Na M-Pesa Online passkey from the Daraja portal
DARAJA_PASSKEY=your_lipa_na_mpesa_passkey_here
# Publicly reachable HTTPS URL — Safaricom POSTs payment results here
DARAJA_CALLBACK_URL=https://your-domain.com/api/payment/mpesa/callback

# ── Daraja B2C (withdrawals / disbursements) ─────────────────────────────────
# Leave blank to reuse the C2B consumer key/secret for B2C as well.
DARAJA_B2C_CONSUMER_KEY=your_b2c_consumer_key_here
DARAJA_B2C_CONSUMER_SECRET=your_b2c_consumer_secret_here
DARAJA_B2C_SHORTCODE=your_b2c_shortcode_here
DARAJA_B2C_INITIATOR_NAME=your_initiator_name_here
DARAJA_B2C_INITIATOR_PASSWORD=your_initiator_password_here
# Publicly reachable HTTPS URLs for B2C result callbacks
DARAJA_B2C_RESULT_URL=https://your-domain.com/api/payment/mpesa/b2c/result
DARAJA_B2C_TIMEOUT_URL=https://your-domain.com/api/payment/mpesa/b2c/timeout
# RSA-encrypted initiator password (generate via Daraja portal)
DARAJA_B2C_SECURITY_CREDENTIAL=your_rsa_encrypted_security_credential_here

# ── Twilio (optional — SMS OTP for phone verification) ───────────────────────
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
